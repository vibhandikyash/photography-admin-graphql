{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:security/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:promise/recommended",
    "plugin:json/recommended",
    "plugin:node/recommended"
  ],
  "plugins": ["graphql", "import", "security", "filenames-simple"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "quotes": ["warn", "single"],
    "semi": "error",
    "linebreak-style": 0,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "indent": ["error", 2],
    "no-param-reassign": "warn",
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": false
        },
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "max-lines": [
      "error",
      {
        "max": 150,
        "skipComments": true,
        "skipBlankLines": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 150,
        "ignoreComments": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "filenames-simple/naming-convention": [
      "error",
      {
        "rule": "kebab-case"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "processor": "@graphql-eslint/graphql"
    },
    {
      "files": ["*.graphql"],
      "extends": "plugin:@graphql-eslint/schema-recommended"
    },
    {
      "files": ["src/schema/migrations/*/*.js"],
      "rules": {
        "filenames-simple/naming-convention": 0
      }
    }
  ]
}
